    .container
        h2.tariffs-title Выгодные
            br
            |
            | тарифные планы в 
            span Иркутске
                +svg('sprite.svg#nav')
        .tariffs-buttons.swiper
            .swiper-wrapper
                .swiper-slide.tariffs-btn Интернет + ТВ
                .swiper-slide.tariffs-btn.active Домашний интернет
                .swiper-slide.tariffs-btn Видеонаблюдение
        .tariffs-slider.swiper
            .swiper-wrapper
              for item in tariffsList
                  +tariffsItem(item)
