mixin ratingItem(props)
    .rating-item.swiper-slide(data-modal='popup-rating' data-form= props.name data-create= props.name id= props.name data-img= 'img/rating/' + props.img + '-reviews.png')
        .rating-item-logo
            img(src='img/rating/' + props.img + '.png')
        p.rating-item-text Отзывы и рейтинг о «Байкал Телепорт» размещаемые на сайте «Яндекс», являются точными и достоверными
        .rating-item-rows
            .rating-item-span Рейтинг: 
                span= props.rating
            .rating-item-span Отзывов: 
                span= props.reviews
        .rating-item-stars
            .rating-item-star
                +svg('sprite.svg#star')
                .rating-item-star-active
                    +svg('sprite.svg#star')
            .rating-item-star
