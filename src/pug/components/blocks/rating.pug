    var ratingList = [
        {
            img: '1',
            rating: '3,6',
            reviews: '95'
        },
        {
            img: '2',
            rating: '3,2',
            reviews: '124'
        },
        {
            img: '3',
            rating: '3,1',
            reviews: '64'
        },
        {
            img: '4',
            rating: '1,3',
            reviews: '0'
        }
    ]

section.rating
    .container
        .rating-slider.swiper
            .swiper-wrapper
              for item in ratingList
                  +ratingItem(item)
