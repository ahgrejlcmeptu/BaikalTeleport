mixin ratingItem(props)
    .rating-item.swiper-slide
        .rating-item-logo
            img(src='img/rating/' + props.img + '.png')
        .rating-item-rows
            .rating-item-span Рейтинг: 
                span= props.rating
            .rating-item-span Отзывов: 
                span= props.reviews
        .rating-item-stars
            .rating-item-star
                +svg('sprite.svg#star')
                .rating-item-star-active
                    +svg('sprite.svg#star')
            .rating-item-star
                +svg('sprite.svg#star')
                .rating-item-star-active
                    +svg('sprite.svg#star')
            .rating-item-star
                +svg('sprite.svg#star')
                .rating-item-star-active
                    +svg('sprite.svg#star')
            .rating-item-star
                +svg('sprite.svg#star')
                .rating-item-star-active
                    +svg('sprite.svg#star')
            .rating-item-star
                +svg('sprite.svg#star')
                .rating-item-star-active
                    +svg('sprite.svg#star')

