mixin requisitesItem(props)
    .requisites-item
        .requisites-item-title!= props.title
        .requisites-item-btn
            a.btn.btn-stroke(download href='#')
                span Скачать
                +svg('sprite.svg#list')
                span .pdf
        p.requisites-item-text!= props.text


section.requisites
    .container
        h2.requisites-title Реквизиты Байкал Телепорт
        .requisites-list.f.f-w
          for item in requisitesList
              +requisitesItem(item)
